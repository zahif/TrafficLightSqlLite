
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewVelocityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Velocity is:"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/textViewVelocity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30 km/h"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/textViewDistanceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Distance from the next Traffic Light is:"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100 m"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"/>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".MapsActivity" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalom!"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"/>

    <Button
        android:text="Exit"
        android:id="@+id/buttonExit"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
         />


</LinearLayout>